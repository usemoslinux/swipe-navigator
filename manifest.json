{
  "manifest_version": 2,
  "name": "Swipe Navigator",
  "version": "1.0",
  "description": "Enables pull-down to reload and horizontal swipes for Back/Forward navigation on mobile devices.",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["swipe.js"],
      "css": ["swipe.css"],
      "run_at": "document_idle"
    }
  ]
}

